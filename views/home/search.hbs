{{#section 'js'}}
    <script type="text/javascript" src="/assests/js/jquery.simplePagination.js"></script>    
    <script type="text/javascript" src="/assests/js/final2.js"></script>    
{{/section}}

{{#section 'css'}}
    <link rel="stylesheet" href="/assests/css/final.css">
    <link rel="stylesheet" href="/assests/css/simplePagination.css">
{{/section}}
<div class="content">
    <div>
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class=""></li>
                <li data-target="#myCarousel" data-slide-to="1" class=""></li>
                <li data-target="#myCarousel" data-slide-to="2" class=""></li>
                <li data-target="#myCarousel" data-slide-to="3"></li>
            </ol>
            <div class="carousel-inner" role="listbox">
                <div class="item">
                    <img src="/assests/Images/image1.jpg" alt="Chania">
                </div>

                <div class="item active left">
                    <img src="/assests/Images/image2.jpg" alt="Chania">
                </div>

                <div class="item next left">
                    <img src="/assests/Images/image2.jpg" alt="Flower">
                </div>
            </div>
            <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    <div class="row adcontent panel">
        <div class="col-md-2">
            <div class="category-banner">
                <div class="category-list">
                    <a href="#" class="category-header">
                        <span class=" glyphicon glyphicon-tasks pull-left"></span>&nbsp;&nbsp;Tất cả danh mục
                    </a>
                    <ul class="category-content">
                        {{#each layoutVM.categories }}
                            <li class="category-item">
                                <a class="category-link" href="/search/danhmuc/{{CatID}}">
                                    <span>{{CatName}}</span>
                                </a>
                            </li>
                        {{/each}}
                    </ul>
                </div>
            </div>	
        </div>
        <div class="col-md-10 row">
            <div class="container">
                <h3>Các sản phẩm thuộc danh mục này là</h3>
                {{#each products }}
                    <div class="product-item col-md-3">
                        <a href="/product/productDetail/{{ProID}}">
                            <span class="image">
                                <img class="lazy" src="{{Image1}}">
                            </span>
                            <span class="title">{{ProName}}</span>
                            <p class="price-bid"><label style="color: red; font-size: 16px;">Top</label> {{number_format Price}} </p>
                            <p class="price-sale"><label style="color: orange; font-size: 14px;">Mua ngay</label> {{number_format Price}} </p>
                        </a>
                        
                        <button class="btn btn-large btn-block btn-success bid">
                            <span class="glyphicon glyphicon-eject"></span> Bid
                        </button>
                    </div>
                {{/each}}
            </div> 
             <div class="pagination-page" style="margin: 0 400px;"></div>
        </div>
    </div>
</div>